<h1>タスク詳細</h1>
 <div class= "row" >
   
   <table class="table table-bordered" id="table-tasks">
    <tbody>
    <tr>
      <th class="active col-md-2"><%= Task.human_attribute_name :id %></th>
      <td><%= @task.id %></td>
    </tr>  
    <tr>
      <th class="active col-md-2"><%= Task.human_attribute_name :name %></th>
      <td><%= @task.name %></td>
    </tr>
    <tr>
      <th class="active col-md-2"><%= Task.human_attribute_name :description %></th>
      <td><%= raw Rinku.auto_link(@task.description, :all, 'target="_blank"') %></td>
    </tr>
    <tr>
      <th class="active col-md-2"><%= Task.human_attribute_name :created_at %></th>
      <td><%= @task.created_at %></td>
    </tr>
    <tr>
      <th class="active col-md-2"><%= Task.human_attribute_name :updated_at %></th>
      <td><%= @task.updated_at %></td>
    </tr>
     
    </tbody>
   </table>
 </div>